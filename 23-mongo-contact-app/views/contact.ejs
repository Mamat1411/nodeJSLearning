<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>My Contact List</h2>
            <table class="table table-striped table-hover my-3">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% if (contacts.length === 0) { %>
                    <div class="alert alert-danger fw-bold" role="alert">
                      Contact Data is Empty
                    </div>
                  <% } %>
                  <% contacts.forEach((c, i) => { i++ %>
                    <tr>
                      <th scope="row"><%= i++ %> </th>
                      <td><%= c.name %> </td>
                      <td><%= c.phoneNumber %> </td>
                      <td><a href="/contact/<%= c.name %> " class="badge bg-primary rounded-pill text-decoration-none"><i class="bi bi-info-circle"></i> Details</a></td>
                    </tr>
                    <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>