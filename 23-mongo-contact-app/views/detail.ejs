<div class="container mt-3">
    <div class="row">
        <div class="col-md-8">
            <h2>Detail Contact</h2>
            <% if (!contact) { %>
            <div class="alert alert-danger fw-bold" role="alert">
                Contact is Not Found! <br><a href="/contact" class="alert-link fw-normal">Back to Contact List</a>
            </div>
            <% } else { %>
            <div class="card" style="width: 18rem;">
                <div class="card-body">
                    <h4 class="card-title"><%= contact.name %> </h4>
                    <h6 class="card-subtitle mb-1 text-muted"><%= contact.phone %> </h6>
                    <h6 class="card-text"><%= contact.email %> </h6>
                    <a href="/contact" class="badge bg-warning text-decoration-none">Back</a>
                </div>
            </div>
            <% } %> 
        </div>
    </div>
</div>