<div class="container">
    <div class="row">
        <div class="col-md-8">
            <h2>My Contact List</h2>
            <table class="table table-striped table-hover my-3">
                <thead>
                  <tr>
                    <th scope="col">#</th>
                    <th scope="col">Name</th>
                    <th scope="col">Phone Number</th>
                    <th scope="col">Email</th>
                    <th scope="col">Actions</th>
                  </tr>
                </thead>
                <tbody>
                  <% contacts.forEach((contact, i) => { i++ %>
                    <tr>
                      <th scope="row"><%= i++ %> </th>
                      <td><%= contact.name %> </td>
                      <td><%= contact.phoneNumber %> </td>
                      <td><%= contact.email %> </td>
                      <td><a href="/contact/<%= contact.name %> " class="badge bg-primary rounded-pill text-decoration-none"><i class="bi bi-info-circle"></i> Details</a></td>
                    </tr>
                  <% }) %>
                </tbody>
            </table>
        </div>
    </div>
</div>